@{
  Layout="Shared/_Layout.cshtml";
}

<div class="row">
  @if(@Model.Count == 0)
  {
    <h1>There is no one Stylist in database</h1>
  }
  else{
      @foreach(var stylist in Model)
      {
        <h4><a href="/stylist/@stylist.GetId()">@stylist.GetName()</a> | <form class="inline-edit-button" action="/stylist/@stylist.GetId()/update" method="get"><input type="hidden" name="form-type" id="form-type" value="stylist-update"><button type="submit" class="btn btn-xs">[edit]</button></form></h4>
      }
  }
</div>
